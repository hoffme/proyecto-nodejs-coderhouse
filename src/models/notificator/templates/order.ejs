<h3>Nueva Orden Creada</h3>
<b>Cliente:</b>
<label><%= user.name; %> (<%= user.email; %>)</label>
<br/><br/>
<b>Fecha:</b>
<label><%= timestamp; %></label>
<br/><br/>
<b>Entrega:</b>
<label><%= address.city; %>, <%= address.street; %> <%= address.number; %> (<%= address.indications; %>)</label>
<br/><br/>
<b>Productos:</b>
<table>
    <% for(var i=0; i < items.length; i++) { %>
        <tr>
          <td><%= items[i].quantity %></td>
          <td><%= items[i].name %></td>
          <td>$ <%= items[i].total %></td>
        </tr>
    <% } %>
</table>
<br/><br/>
<b>Total:</b>
<label>$ <%= total; %></label>